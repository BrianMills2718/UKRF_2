# Super-Digimon Environment Configuration
# Copy this file to .env and update values as needed

# Neo4j Database Configuration (Required)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# SQLite Database Configuration (Required)
SQLITE_DB_PATH=./data/metadata.db

# FAISS Vector Index Configuration (Required)  
FAISS_INDEX_PATH=./data/faiss_index

# Optional: Redis Cache (improves performance)
REDIS_URL=redis://localhost:6379/0

# Optional: Brave Search API Key (for web research)
# Get key from: https://brave.com/search/api/
# BRAVE_SEARCH_API_KEY=your_api_key_here

# MCP Configuration
DISABLE_MCP=false
USE_SUBPHASES=false

# Development Settings
LOG_LEVEL=INFO
MCP_SERVER_PORT=3333